<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="6" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/luckeyCardText"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCard1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCard2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCard3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCard4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCard5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCard6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/un_open_card"
            android:padding="3dp"
            android:textColor="@color/dimRed"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>