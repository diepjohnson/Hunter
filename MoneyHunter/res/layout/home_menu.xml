<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slide_menu" >

        <RelativeLayout
            android:id="@+id/rl_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rl_avatar"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/default_avatar"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/img_avatar"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_number_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/img_avatar"
                android:text="@string/number_notify"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/number_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tv_number_notify"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/img_avatar" />
        </RelativeLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_avatar"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/download"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_download"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/exchange"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_exchange"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_intro_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/intro_code"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_intro_code"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider4"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/invite_friend"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_invite"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_friend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider5"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/friends_list"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_friend_list"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider6"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/income_statistic"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_statistic"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_lucky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider7"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/lucky_hand"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_lucky"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_term_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider8"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/terms_policy"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_term_policy"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_usage_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider9"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/usage_guide"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_usage_guide"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider10"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/settings"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/menu_setting"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/menu_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divider11"
            android:background="@color/slide_menu"
            android:padding="10dp"
            android:text="@string/contacts"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</ScrollView>